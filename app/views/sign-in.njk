{% extends "layout.njk" %}
{% set title = "Sign in" %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/sign-in",
    productName: serviceName,
    containerClasses: "govuk-width-container",
    navigationClasses: "govuk-header__navigation--end"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ title }}
      </h1>

      <p class="govuk-body-l">You must sign in to your account to publish teacher training courses.</p>

      {{ govukButton({text: "Sign in using DfE Sign-in", href: "/rolled-over?from=sign-in"}) }}

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      <h2 class="govuk-heading-m">Ask for an account</h2>
      <p class="govuk-body">Do not have an account? You can get one by emailing <a class="govuk-link" href="mailto:becomingateacher@digital.education.gov.uk">becomingateacher<wbr>@digital.education.gov.uk</a>.</p>
    </div>
  </div>
{% endblock %}
