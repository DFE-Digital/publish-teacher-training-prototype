{% extends "layout.njk" %}
{% set title = "School placements" %}
{% set backLink = "/about-your-organisation" %}

{% block content %}
  <form action="{{ backLink }}" method="post">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl">{{ data["training-provider-name"] }}</span>
      {{ title }}
    </h1>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">Give applicants more information about the schools they’ll be teaching in. Tell them:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>how many placements a candidate will have</li>
          <li>how much time they’ll spend in each school</li>
          <li>if mentors are available within the schools</li>
          <li>the average distance candidates have to travel from home to school</li>
        </ul>

        <p class="govuk-body">You could also mention:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>how many schools you partner with in total</li>
          <li>whether candidates are able to change schools</li>
          <li>how placement schools are selected</li>
        </ul>

        {{ govukCharacterCount({
          name: "school-placements",
          id: "school-placements",
          value: value("school-placements"),
          label: {
            text: "How do school placements work?",
            classes: "govuk-label--m"
          },
          maxwords: 350,
          rows: 15
        }) }}
      </div>

      <div class="govuk-grid-column-one-third">
        <div class="app-status-box govuk-!-margin-bottom-6">
          {{ macros.formatting() }}
        </div>
      </div>
    </div>

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Save"
      }) }}
      <a class="govuk-link" href="/about-your-organisation">Cancel changes</a>
    </div>
  </form>
{% endblock %}
