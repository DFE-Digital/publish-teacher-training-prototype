{% extends "layout.njk" %}
{% set title = "Select the organisations this user requires access to" %}
{% set navActive = "users" %}

{% block breadcrumbs %}
  {{ govukBackLink({
    href: "/users/what-access"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-xl">Invite user</span>
        {{title}}
      {% endset %}

      <form action="/users/organisations" method="post">

        {{ govukCheckboxes({
          idPrefix: "organisations",
          name: "organisations",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl govuk-!-margin-bottom-6"
            }
          },
          items: [
            {
              value: "org-1",
              text: "Achieve with TELA",
              checked: checked("organisations", "org-1")
            },
            {
              value: "org-2",
              text: "Beech Hill",
              checked: checked("organisations", "org-2")
            },
            {
              value: "org-3",
              text: "TeachSlough",
              checked: checked("organisations", "org-3")
            }
          ]
        }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
