{% extends "_layout.njk" %}

{% set primaryNavId = "users" %}

{% set title = user.firstName + " " + user.lastName %}

{% block beforeContent %}

{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "First name"
            },
            value: {
              text: user.firstName
            }
          },
          {
            key: {
              text: "Last name"
            },
            value: {
              text: user.lastName
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: user.email
            }
          }
        ]
      }) }}

      {% if not (user.id == signedInUser.id) %}
        <p class="govuk-body">
          <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Delete user</a>
        </p>
      {% endif %}

    </div>
  </div>

{% endblock %}
