{% extends "layout.njk" %}
{% set title = "Permissions for Achieve with TELA" %}
{% set navActive = "users" %}

{% block breadcrumbs %}
  {{ govukBackLink({
    href: "/users/what-access"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-xl">Invite user</span>
        {{title}}
      {% endset %}

      <form method="post" action="/users/permissions-1">

        {{ govukCheckboxes({
            name: "permissions",
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl govuk-!-margin-bottom-6"
              }
            },
            items: [
              {
                value: "Manage courses",
                text: "Manage courses",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "Create, edit, withdraw and close courses."
                }
              },
              {
                value: "Manage users",
                text: "Manage users",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "Invite and remove users and set user permissions."
                }
              }
            ]
          }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>

    </div>
  </div>

{% endblock %}
