{%- from "../button-menu/macro.njk" import appButtonMenu %}

<div class="app-page-header-actions {{- ' ' + params.classes if params.classes}}" {%- for attribute, value in params.attributes -%} {{ attribute }}="{{ value }}"{% endfor %}>

  <div class="app-page-header-actions__title">
    <h{{ params.heading.level | default(1) }} class="{{params.heading.classes | default('govuk-heading-xl')}}">
      {{- params.heading.html | safe if params.heading.html else params.heading.text -}}
    </h{{ params.heading.level | default(1) }}>
  </div>

  {% if params.items %}
    <div class="app-page-header-actions__actions">
      {{appButtonMenu({
        buttonClasses: 'app-page-header-actions__action',
        items: params.items
      })}}
    </div>
  {% endif %}

</div>