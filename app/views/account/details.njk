{% extends "_layout.njk" %}

{% set headerNavId = "account" %}

{% set title = "Your account" %}
{#% set caption = user.firstName + " " + user.lastName %#}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    text: "Home",
    href: "/"
  }]
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        {% if caption.length %}
          <span class="govuk-caption-l">
            {{ caption }}
          </span>
        {% endif %}
        {{ title }}
      </h1>

      {% set notificationHtml %}
        {% if user.organisations[0].notifications.length %}
          <ul class="govuk-list">
            {% for notification in user.organisations[0].notifications %}
              <li>
                {{ notification | getNotificationLabel }}
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="govuk-body">None</p>
        {% endif %}
      {% endset %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "First name"
            },
            value: {
              text: user.firstName
            }
          },
          {
            key: {
              text: "Last name"
            },
            value: {
              text: user.lastName
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: user.email
            }
          },
          {
            key: {
              text: "Email notifications"
            },
            value: {
              html: notificationHtml
            },
            actions: {
              items: [
                {
                  href: "/account/organisations/" + user.organisations[0].id + "/notifications",
                  text: "Change",
                  visuallyHiddenText: "notifications"
                }
              ]
            }
          } if user.organisations.length == 1
        ]
      }) }}

      {% if user.organisations.length > 1 %}
        <h2 class="govuk-heading-m govuk-!-margin-top-9">Email notifications</h2>

        <dl class="govuk-summary-list">
          {% for organisation in user.organisations %}
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                {{ organisation.name }}
              </dt>
              <dd class="govuk-summary-list__value">
                {% if organisation.notifications.length %}
                  <ul class="govuk-list">
                    {% for notification in organisation.notifications %}
                      <li>{{ notification | getNotificationLabel }}</li>
                    {% endfor %}
                  </ul>
                {% else %}
                  <p class="govuk-body">None</p>
                {% endif %}
              </dd>
              <dd class="govuk-summary-list__actions">
                <a class="govuk-link" href="/account/organisations/{{ organisation.id }}/notifications">
                  Change<span class="govuk-visually-hidden"> {{ organisation.name }} email notifications</span>
                </a>
              </dd>
            </div>
          {% endfor %}
        </dl>

      {% endif %}

    </div>
  </div>

{% endblock %}
