{% extends "layouts/main.njk" %}

{% set headerNavId = "account" %}

{% set hidePrimaryNavigation = true %}
{% set hideOrganisationSwitcher = true %}

{% set title = "Your account" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [
    {
      text: "Home",
      href: "/"
    },
    {
      text: title
    }
  ]
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <ul class="govuk-list govuk-list--spaced">
        <li>
          <a href="{{ actions.personalDetails }}">Your personal details</a>
        </li>
        <li>
          <a href="{{ actions.notifications }}">Your email notifications</a>
        </li>
      </ul>

    </div>
  </div>

{% endblock %}
