{% extends "_layout.njk" %}

{% set headerNavId = "account" %}

{% set hidePrimaryNavigation = true %}
{% set hideOrganisationSwitcher = true %}

{% set title = "Your personal details" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    text: "Home",
    href: "/"
  }, {
    text: "Your account",
    href: "/account"
  }, {
    text: title
  }]
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "First name"
            },
            value: {
              text: user.firstName
            }
          },
          {
            key: {
              text: "Last name"
            },
            value: {
              text: user.lastName
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: user.email
            }
          }
        ]
      }) }}

    </div>
  </div>

{% endblock %}
