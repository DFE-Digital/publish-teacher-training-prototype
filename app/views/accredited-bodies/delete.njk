{% extends "_layout.njk" %}

{% set primaryNavId = "accreditedBodies" %}

{% if hasCourses %}
  {% set title = "You cannot delete this accredited body" %}
{% else %}
  {% set title = "Are you sure you want to delete this accredited body?" %}
{% endif %}

{% set caption = accreditedBody.name %}

{% block pageTitle %}
  {{ "Error: " if errors.length }}{{ title + " - " if title }}{{ caption + " - " if caption }}{{ serviceName }} - GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {% if hasCourses %}
          <p class="govuk-body">{{ accreditedBody.name }} ratifies courses for {{ organisation.name }} and cannot be deleted.</p>
          <p class="govuk-body">To delete {{ accreditedBody.name }} you must first update the accredited body for all the courses they ratify.</p>
        {% else %}
          {{ govukButton({
            text: "Delete accredited body",
            classes: "govuk-button--warning"
          }) }}
        {% endif %}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
