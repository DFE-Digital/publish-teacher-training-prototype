{% extends "_layout.njk" %}

{% set primaryNavId = "accreditedBodies" %}

{% if hasCourses %}
  {% set title = "You cannot delete this accredited provider" %}
{% else %}
  {% set title = "Are you sure you want to delete this accredited provider?" %}
{% endif %}

{% set caption = accreditedBody.name %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {% if hasCourses %}

          <p class="govuk-body">{{ accreditedBody.name }} is an accredited provider for courses run by {{ organisation.name }}.</p>
          <p class="govuk-body">To delete {{ accreditedBody.name }}, you must first change the accredited provider for those courses.</p>

        {% else %}

          {{ govukButton({
            text: "Delete accredited provider",
            classes: "govuk-button--warning"
          }) }}

        {% endif %}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
