{% extends "layouts/main.njk" %}

{% set primaryNavId = "settings" %}

{% set hidePrimaryNavigation = true %}
{% set hideOrganisationSwitcher = true %}

{% set title = "Recruitment cycles" %}
{# {% set caption = organisation.name %} #}

{% block beforeContent %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <ul class="govuk-list govuk-list--spaced">
        <li>
          <a class="govuk-link" href="/organisations/{{ organisation.id }}/cycles/{{ data.currentCycle.code }}">
            {{ data.currentCycle.code | getCycleLabel }}
          </a>
        </li>
        <li>
          <a class="govuk-link" href="/organisations/{{ organisation.id }}/cycles/{{ data.nextCycle.code }}">
            {{ data.nextCycle.code | getCycleLabel }}
          </a>
        </li>
      </ul>

    </div>
  </div>
{% endblock %}
