{% extends "layout.njk" %}
{% set title = "What type of training location?" %}
{% set backLink = paths.back %}

{% block content %}
  <h1 class="govuk-heading-xl">
    {{ title }}
  </h1>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="{{ paths.current }}" method="post">
        {% set fields = [
            {
              name: 'A school, college or university'
            },
            {
              name: 'A region or area representing many schools'
            },
            {
              name: 'A place that’s not a school, college or university',
              more: '<p class="govuk-error-message">Sorry, this option hasn’t been built yet</p>'
            }
          ]
        %}

        {{ macros.radioGroup(code + '-location-type', fields) }}
        <input type="submit" class="govuk-button" value="Continue" />
      </form>
    </div>
  </div>
{% endblock %}
