{% extends "layout.njk" %}
{% if data[code + '-location-type'] and data[code + '-location-type'].includes('A region or area') %}
  {% set title = data[code + '-region-name'] %}
{% else %}
  {% set title = data[code + '-name'] %}
{% endif %}
{% set backLink = "/locations" %}

{% block content %}
  <form action="{{ paths.next }}" method="post">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">
          {{ title }}
        </h1>

        <dl class="govuk-summary-list govuk-!-margin-top-9 govuk-!-margin-bottom-9">
          {% include "new-location/_answers.njk" %}
        </dl>
      </div>
    </div>

    <input type="submit" class="govuk-button" value="Confirm changes" />

    <p>
      <a href="/locations">Cancel changes</a>
    </p>
  </form>
{% endblock %}
