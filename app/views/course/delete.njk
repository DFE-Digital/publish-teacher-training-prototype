{% extends "layout.njk" %}
{% set title = "Are you sure you want to delete this course?" %}
{% set backLink = course.path %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">{{ course.name | safe }} ({{ course.programmeCode }})</span>
        {{ title }}
      </h1>

      <form action="{{ course.path }}/delete" method="post">
        <p>You can only delete a course if it hasn’t been published in this cycle.</p>

        <p>Delete a course if you:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>created it by mistake</li>
          <li>won’t offer it again</li>
        </ul>

        <p>Deleting a course is permanent – you can’t undo it. If you need to recreate a course after deleting it, it will have a new course code.</p>

        <hr class="govuk-section-break govuk-section-break--m">

        <h2 class="govuk-heading-m">Confirm deletion</h2>

        {{ macros.textbox('confirm-code', 'Type in the course code to confirm', false, 'govuk-input--width-5') }}

        <hr class="govuk-section-break govuk-section-break--m">

        {{ govukButton({
          text: "Yes I’m sure – delete this course",
          classes: "govuk-button--warning"
        }) }}

        <p><a href="{{ course.path }}">Cancel</a></p>
      </form>
    </div>
  </div>


{% endblock %}
