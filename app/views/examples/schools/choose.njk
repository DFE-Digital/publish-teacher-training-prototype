{% extends "_layout.njk" %}

{% set primaryNavId = "schools" %}

{% if referrer == "change" %}
  {% set title = location.name %}
{% else %}
  {% set title = "Select a school" %}
  {% set caption = "Add school" %}
{% endif %}

{% block pageTitle %}
  {{ "Error: " if errors.length }}{{ title + " - " if title }}{{ caption + " - " if caption }}{{ serviceName }} - GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set headingHtml %}
        {% include "_includes/page-heading-legend.njk" %}
      {% endset %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {{ govukRadios({
          idPrefix: "school",
          name: "school",
          fieldset: {
            legend: {
              html: headingHtml,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "Results for ‘" + searchTerm + "’"
          },
          errorMessage: errors | getErrorMessage("school"),
          items: schoolItems
        }) }}

        {% if schoolCount > 15 %}
          {% set insetMessage  %}
            {{ schoolCount | numeral("0,0") }} more schools match your search for ‘{{ searchTerm }}’. Try narrowing down your search if the school you’re looking for is not listed.
          {% endset %}
          {{ govukInsetText({
            text: insetMessage
          }) }}
        {% endif %}

        <p class="govuk-body govuk-!-margin-bottom-7">
          <a class="govuk-link" href="{{ actions.back }}">The school is not listed - search again</a>
        </p>

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
