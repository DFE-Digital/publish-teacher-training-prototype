{% extends "layout.njk" %}
{% set title = "Check your information before sending your requests" %}
{% set backLink = "/allocations/request-places" %}

{% set requestingProviderName %}
  {% if data.requestingProvider != "Find an organisation not listed above" %}
    {{ data.requestingProvider }}
  {% else %}
    {{ data.schoolList }}
  {% endif %}
{% endset %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">{{ requestingProviderName }}</span>
        {{ title }}
      </h1>

      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Places requested"
          },
          value: {
            text: data.requestedAmount
          },
          actions: {
            items: [{
              href: "/allocations/request-places",
              text: "Change",
              visuallyHiddenText: "places requested"
            }]
          }
        }]
      }) }}

      {{ govukButton({
        href: "/allocations/confirmation",
        text: "Send request"
      }) }}
    </div>
  </div>
{% endblock %}
