{% extends "layout.njk" %}
{% set title = "Manage notifications" %}
{% set navActive = "notifications" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form action="/" method="post" class="form">
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
          <h1 class="govuk-fieldset__heading govuk-!-margin-bottom-8">
            <span class="govuk-caption-xl">Notifications for accredited bodies</span>
            Changes to courses
          </h1>
        </legend>

        <div class="govuk-!-margin-bottom-6">
          <p>You'll receive notifications for courses that you're the accredited body for when:</p>
          <ul class="govuk-list govuk-list--bullet">
            <li>a new course is published to Find postgraduate teacher training</li>
            <li>a change to an existing course is made</li>
            <li>a course is withdrawn</li>
            <li>the vacancy status of a course is changed</li>
          </ul>
        </div>

        <h2 class="govuk-heading-l">Would you like would you like to receive email notifications?</h2>

        {% set fields = [
          {
            name: "Yes, send me notifications",
            value: "get-notifications",
            checked: checked("notifications", "get-notifications")
          },
          {
            name: "No",
            value: "no-notifications",
            checked: checked("notifications", "no-notifications")
          }
        ]
        %}
        {{ macros.radioGroup('ab-notifications', fields) }}

      <input type="submit" class="govuk-button govuk-!-margin-bottom-8 govuk-!-margin-top-2" value="Save">
    </form>
    <p>
      <a href="/">Cancel changes</a>
    </p>
  </div>
</div>
{% endblock %}
