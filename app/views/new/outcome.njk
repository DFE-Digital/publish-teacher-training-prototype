{% extends "layout.njk" %}
{% set title = "Pick a course outcome" %}
{% set backLink = paths.back %}

{% block content %}
  <form action="{{ paths.next }}" method="post" class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukRadios({
        idPrefix: code + "-outcome",
        name: code + "-outcome",
        fieldset: {
          legend: {
            text: title,
            isPageHeading: true,
            classes: "govuk-fieldset__legend--xl"
          }
        },
        items: [{
          value: "PGCE with QTS",
          text: "PGCE with QTS",
          checked: checked((code + "-outcome"), "PGCE with QTS"),
          label: {
            classes: "govuk-label--s"
          },
          hint: {
            text: "Postgraduate certificate in education with qualified teacher status"
          }
        }, {
          value: "QTS",
          text: "QTS",
          checked: checked((code + "-outcome"), "QTS"),
          label: {
            classes: "govuk-label--s"
          },
          hint: {
            text: "Qualified teacher status"
          }
        }, {
          value: "PGDE with QTS",
          text: "PGDE with QTS",
          checked: checked((code + "-outcome"), "PGDE with QTS"),
          label: {
            classes: "govuk-label--s"
          },
          hint: {
            text: "Postgraduate diploma in education with qualified teacher status"
          }
        }]
      }) }}

      {% if editing %}
        {{ govukButton({
          text: "Save and publish changes"
        }) }}
        <p class="govuk-body"><a href="{{ paths.back }}">Cancel changes</a></p>
      {% else %}
        {{ govukButton({
          text: "Continue"
        }) }}
      {% endif %}
    </div>
  </form>
{% endblock %}
