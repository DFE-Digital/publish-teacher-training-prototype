{% extends "layout.njk" %}
{% set title = "Full time or part time?" %}
{% set backLink = paths.back %}

{% block content %}
  <form action="{{ paths.next }}" method="post" class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukRadios({
        idPrefix: code + "-full-part",
        name: code + "-full-part",
        fieldset: {
          legend: {
            text: title,
            isPageHeading: true,
            classes: "govuk-fieldset__legend--xl"
          }
        },
        items: [{
          value: "Full time",
          text: "Full time",
          checked: checked((code + "-full-part"), "Full time")
        }, {
          value: "Part time",
          text: "Part time",
          checked: checked((code + "-full-part"), "Part time")
        }, {
          value: "Full time or part time",
          text: "Full time or part time",
          checked: checked((code + "-full-part"), "Full time or part time")
        }]
      }) }}

      {% if editing %}
        {{ govukButton({
          text: "Save and publish changes"
        }) }}
        <p class="govuk-body"><a href="{{ paths.back }}">Cancel changes</a></p>
      {% else %}
        {{ govukButton({
          text: "Continue"
        }) }}
      {% endif %}
    </div>
  </form>
{% endblock %}
