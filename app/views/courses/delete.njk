{% extends "layouts/main.njk" %}

{% set primaryNavId = "courses" %}

{% set title = "Are you sure you want to delete this course?" %}
{% set caption = course.name + " (" + course.code + ")" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        <p class="govuk-body">You can only delete a course if it has not been published in this cycle.</p>

        <p class="govuk-body">Delete a course if you:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>created it by mistake</li>
          <li>will not offer it again</li>
        </ul>

        <p class="govuk-body">Deleting a course is permanent â€“ you cannot undo it. If you need to recreate a course after deleting it, it will have a new course code.</p>

        {{ govukButton({
          text: "Delete course",
          classes: "govuk-button--warning"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
