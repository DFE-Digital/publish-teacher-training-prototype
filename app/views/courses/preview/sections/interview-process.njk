<div class="govuk-!-margin-bottom-8">
  <h2 id="interview-process" class="govuk-heading-l">Interview process</h2>
  {% if course.interviewProcess.length %}
    {{ course.interviewProcess | markdownToHtml | safe }}
  {% else %}
    {% set insetHtml %}
      <a class="govuk-link" href="#?referrer=preview">Enter details about the interview process</a>
    {% endset %}

    {{ govukInsetText({
      html: insetHtml
    }) }}
  {% endif %}
</div>
