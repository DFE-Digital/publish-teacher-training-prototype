<div class="govuk-!-margin-bottom-8">
  <h2 id="salary" class="govuk-heading-l">Salary</h2>
  {% if course.salaryDetails %}
    {{ course.salaryDetails | markdownToHtml | safe }}
  {% else %}
    {% set insetHtml %}
      <a class="govuk-link" href="{{ actions.change }}/salary-details?referrer=preview">Enter salary details</a>
    {% endset %}

    {{ govukInsetText({
      html: insetHtml
    }) }}
  {% endif %}
</div>
