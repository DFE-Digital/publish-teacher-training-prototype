{% if subNavId == "description" %}
  <div class="app-status-box">
    <h3 class="govuk-heading-m">Status</h3>

    <p class="govuk-body">
      {{ govukTag({
        text: "Empty",
        classes: "govuk-tag--grey app-tag--grey"
      }) }}
    </p>

    <h3 class="govuk-heading-s govuk-!-margin-bottom-0">
      Is it on <abbr class="app-!-text-decoration-underline-dotted" title="Find postgraduate teacher training">Find</abbr>?
    </h3>
    <p class="govuk-body">
      No â€“ still in draft
    </p>

    <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--m">

    <h3 class="govuk-heading-m">Preview</h3>
    <p class="govuk-body">See how your unpublished changes will look on Find.</p>
    <p class="govuk-body">Preview to check for mistakes before publishing.</p>
    <p class="govuk-body">
      <a class="govuk-link" href="{{ actions.preview }}">Preview course</a>
    </p>

    <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--m">

    <h4 class="govuk-heading-m">Publish</h4>
    <p class="govuk-body">Publish your changes.</p>
    <p class="govuk-body">You can make changes to this course after publishing it.</p>

    {{ govukButton({
      text: "Publish",
      href: actions.publish,
      classes: "govuk-!-margin-bottom-0"
    }) }}

    <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--m">

    <h3 class="govuk-heading-m govuk-visually-hidden">Delete</h3>
    <p class="govuk-body">
      <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Delete this course</a>
    </p>
  </div>
{% endif %}

