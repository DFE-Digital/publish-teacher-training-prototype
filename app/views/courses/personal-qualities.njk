{% extends "_layout.njk" %}

{% set title = "Personal qualities" %}
{% set caption = course.name + " (" + course.code + ")" %}

{% block pageTitle %}
  ("Error: " if errors) + {{ title + " - " if title }}{{ caption + " - " if caption }}{{ serviceName }} - GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set headingHtml %}
        <h1 class="govuk-heading-l">
          <span class="govuk-caption-l">
            {{ caption }}
          </span>
          {{ title }}
        </h1>
      {% endset %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>

        {{ govukCharacterCount({
          id: "personal-qualities",
          name: "course[personalQualities]",
          rows: 10,
          maxwords: 100,
          label: {
            html: headingHtml
          },
          hint: {
            text: "Tell applicants about the skills, motivation and experience youâ€™re looking for (for example, experience of working with children, a genuine passion for the subject or a talent for public speaking)."
          },
          errorMessage: errors | getErrorMessage("personal-qualities"),
          value: course.personalQualities
        }) }}

        {{ govukButton({
          text: "Update personal qualities"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
