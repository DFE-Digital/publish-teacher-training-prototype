{% extends "_layout.njk" %}

{% set primaryNavId = "courses" %}

{% set title = "Are you sure you want to close this course?" %}
{% set caption = course.name + " (" + course.code + ")" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      <form action="{{ actions.save }}" method="post" accept-charset="utf-8" novalidate>



       <p class="govuk-body">If the course has no vacancies, you can close it so that candidates will not be able to apply.</p>

       <p class="govuk-body">The course will still be visable on Find, but candidates will not have the option to apply to it.</p>

        {{ govukButton({
          text: "Close course"
        }) }}

      </form>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
      </p>

    </div>
  </div>

{% endblock %}
