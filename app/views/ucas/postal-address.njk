{% extends "layout.njk" %}
{% set title = "Postal address" %}
{% set backLink = "/ucas/apply-preferences" %}

{% block content %}
  <h1 class="govuk-heading-xl">
    {{ title }}
  </h1>

  <div class="govuk-grid-row govuk-!-margin-top-3">
    <div class="govuk-grid-column-two-thirds">
      <form action="/ucas/apply-preferences" method="post">
        {{ macros.textbox('building-and-street', 'Building and street', null, 'govuk-!-width-full', null, errors) }}
        {{ macros.textbox('building-and-street-2', null, null, 'govuk-!-width-full', null, errors) }}

        {{ macros.textbox('town-or-city', 'Town or city', null, 'form-control', null, errors) }}
        {{ macros.textbox('county', 'County', null, 'form-control', null, errors) }}
        {{ macros.textbox('postcode', 'Postcode', null, 'govuk-input--width-10', null, errors) }}

        {{ govukButton({
          text: "Save"
        }) }}

        <p><a href="/ucas/apply-preferences">Cancel changes</a></p>
      </form>
    </div>
  </div>
{% endblock %}
