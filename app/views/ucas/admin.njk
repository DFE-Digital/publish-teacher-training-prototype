{% extends "layout.njk" %}
{% set title = "UCAS administrator" %}
{% set backLink = "/ucas/apply-preferences" %}

{% block content %}
  {{ govukNotificationBanner({
    text: "You made a request to change this in the last 7 days"
  }) }}

  <h1 class="govuk-heading-xl">
    {{ title }}
  </h1>

  <div class="govuk-grid-row govuk-!-margin-top-3">
    <div class="govuk-grid-column-two-thirds">
      <form action="/ucas/apply-preferences" method="post">
        <p>This person is responsible for creating and maintaining UCAS user&nbsp;accounts.</p>

        <h2 class="govuk-heading-l">Request a change to your UCAS administrator</h2>

        <p>Changes can take up to 7 days to process.</p>

        {{ macros.textbox('ucas-admin-name', 'Name') }}
        {{ macros.textbox('ucas-admin-email', 'Email address') }}
        {{ macros.textbox('ucas-admin-telephone', 'Telephone number', false, 'govuk-input--width-10') }}
        {{ macros.checkboxGroup('agree-to-share', [{ name: 'I give permission to share this information with UCAS' }], false) }}

        {{ govukButton({
          text: "Request changes"
        }) }}

        <p><a href="/ucas/apply-preferences">Cancel changes</a></p>
      </form>
    </div>
  </div>
{% endblock %}
